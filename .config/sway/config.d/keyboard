# Input Stuff
input "type:keyboard" {
    xkb_layout gb
    xkb_variant colemak_dh
    xkb_options ctrl:swapcaps
}

input type:touchpad {
    tap enabled
    natural_scroll disabled
    accel_profile "flat"
    pointer_accel 1.0
    drag enabled
}

input "2:10:TPPS/2_Elan_TrackPoint" {
    pointer_accel 0.5
}
