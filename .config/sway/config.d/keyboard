# Input Stuff
input "type:keyboard" {
    xkb_layout gb,gb
    xkb_variant colemak_dh,
    xkb_options ctrl:swapcaps,grp:rctrl_toggle

    repeat_delay 300
    repeat_rate 30
} 

input type:touchpad {
    tap enabled
    natural_scroll disabled
    accel_profile "flat"
    pointer_accel 1.0
    drag enabled
}

input "2:10:TPPS/2_Elan_TrackPoint" {
    pointer_accel 0.75
}
